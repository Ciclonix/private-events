<%= link_to "Your events", user_path(current_user) %><br><br>

<%= form_with model: @event do |event| %>
  <%= event.label :name %><br>
  <%= event.text_field :name %><br><br>
  <%= event.label :location %><br>
  <%= event.text_field :location %><br><br>
  <%= event.label :date %><br>
  <%= event.datetime_select :date %><br><br>
  <%= event.submit %>
<% end %>

<% if @event.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>